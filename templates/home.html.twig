{% extends "base.html.twig" %}
{% block title %}
	Acceuil
{% endblock %}
{% block body %}
	<div class="container pb-8 pt-7 pb-md-11 pt-md-10 border-bottom border-gray-300"></pre>
	<h1 class="mb-0">
		Article en vedette
	</h1>

	<!-- Text -->
	<p class="mb-5 text-muted">
		Chaque jour un nouvel article a découvrir
	</p>
	<div class="row">
		{% for r in random %}
			<div data-aos="fade-left" class="card card-row shadow-light-lg bg-cover overlay overlay-gradient-dark-end overlay-60 text-white mb-6" style="background-image: url({{ r.mainPicture }});">
				<div class="row gx-0 justify-content-end">
					<div
						class="col-12 col-md-6">

						<!-- Body -->
						<a
							class="card-body" href="#!">

							<!-- Heading -->
							<h3>
								{{ r.titre }}
							</h3>

							<!-- Text -->
							<p class="mb-0 text-white-80">
								{{ r.contenu | slice(0, 155) }}
								...
							</p>

						</a>

						<!-- Meta -->
						<a
							class="card-meta" href="#!">

							<!-- Divider -->
							<hr class="card-meta-divider bg-white-20">

							{# <!-- Avatar -->
																																																																																																																																																																																																																									<div class="avatar avatar-sm me-2">
																																																																																																																																																																																																																										<img src="assets/img/avatars/avatar-2.jpg" alt="..." class="avatar-img rounded-circle">
																																																																																																																																																																																																																									</div> #}

							<!-- Author -->
								<h6 class="text-uppercase text-white-80 me-2 mb-0"> {{ r.auteur }}
							</h6>

							<!-- Date -->
							<p class="h6 text-uppercase text-white-80 mb-0 ms-auto">
								<time datetime="2019-05-02">{{ r.dateCreation|date('d/m/Y') }}</time>
							</p>

							<!-- Catégorie -->
							<p class="h6 text-uppercase text-white-80 mb-0 ms-auto badge bg-light-soft">
								{% for tag in r.tags %}
									{{ tag.nom }}
								{% endfor %}

							</p>

						</a>

					</div>
				</div>
				<!-- / .row -->
			</div>


			<!-- / .row -->
		{% endfor %}
	</div>


</div></div><div
