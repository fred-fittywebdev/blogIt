		<h1 class="my-4">Articles:</h1>
		<div class="row">
			{% for a in articles %}
				<div class="card card-row shadow-light-lg mb-6">
					<div class="row gx-0">
						<div
							class="col-12">

							<!-- Badge -->
							<span class="badge rounded-pill bg-gray-600 badge-float badge-float-outside">
								<span class="h6 text-uppercase">Sport</span>
							</span>

						</div>
						<a
							class="col-12 col-md-6 order-md-2 bg-cover card-img-end"  href="#!">

							<!-- Image (placeholder) -->
							<img
							src="{{ a.mainPicture }}" alt="..." class="img-fluid">

							<!-- Shape -->
							<div
								class="shape shape-start shape-fluid-y svg-shim text-white d-none d-md-block">{# {{> curves/curve-5}} #}
							</div>

						</a>
						<div
							class="col-12 col-md-6 order-md-1">

							<!-- Body -->
							<a
								class="card-body" href="#!">

								<!-- Heading -->
								<h3>
									{{ a.titre }}
								</h3>

								<!-- Text -->
								<p class="mb-0 text-muted">
									{{ a.contenu }}
								</p>

							</a>

							<!-- Meta -->
							<a
								class="card-meta" href="#!">

								<!-- Divider -->
								<hr
								class="card-meta-divider">

								<!-- Avatar -->
								<div
									class="avatar avatar-sm me-2">{# <img src="assets/img/avatars/avatar-1.jpg" alt="..." class="avatar-img rounded-circle"> #}
								</div>

								<!-- Author -->
								<h6 class="text-uppercase text-muted me-2 mb-0">
									{{ a.auteur }}
								</h6>

								<!-- Date -->
								<p class="h6 text-uppercase text-muted mb-0 ms-auto">
									<time datetime="2019-05-31">{{ a.dateCreation|date('d/m/Y') }}</time>
								</p>

							</a>

						</div>

					</div>
