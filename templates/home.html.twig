{% extends "base.html.twig" %}
{% block title %}
	Acceuil
{% endblock %}
{% block body %}
	<div class="container pb-8 pt-7 pb-md-11 pt-md-10 border-bottom border-gray-300"></pre>
	<h1 class="mb-0">
		Article en vedette
	</h1>

	<!-- Text -->
	<p class="mb-5 text-muted">
		Chaque jour un nouvel article a découvrir
	</p>
	<div class="row">
		{% for r in random %}


			<div class="card card-row shadow-light-lg mb-6 lift" data-aos="fade-left">
				<div class="row gx-0">
					<div
						class="col-12">

						<!-- Badge -->
						<span class="badge rounded-pill bg-gray-600 badge-float badge-float-outside">
							<span class="h6 text-uppercase">Evasion
							</span>
						</span>

					</div>
					<a
						class="col-12 col-md-6 order-md-2 bg-cover card-img-end" style="background-image: url({{ r.mainPicture }});" href="#!">

						<!-- Image (placeholder) -->
						<img
						src="{{ r.mainPicture }}" alt="..." class="img-fluid d-md-none invisible">

						<!-- Shape -->
						<div class="shape shape-start shape-fluid-y svg-shim text-white d-none d-md-block">
							<svg viewbox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 0h62.759v172C38.62 384 112 517 112 517v173H0V0z" fill="currentColor"/></svg>
						</div>

					</a>
					<div
						class="col-12 col-md-6 order-md-1">

						<!-- Body -->
						<a
							class="card-body" href="#!">

							<!-- Heading -->
							<h3>
								{{ r.titre }}
							</h3>

							<!-- Text -->
							<p class="mb-0 text-muted">
								{{ r.contenu | slice(0, 155) }}
								...
							</p>

						</a>

						<!-- Meta -->
						<a
							class="card-meta" href="#!">

							<!-- Divider -->
							<hr class="card-meta-divider">

							<!-- Avatar -->
							{# <div class="avatar avatar-sm me-2">
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																			<img src="/img/avatar-1.jpg" alt=" ..." class=" avatar-img rounded-circle">
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																		</div> #}

							<!-- Author -->
								<h6 class="text-uppercase text-muted me-2 mb-0"> {{ r.auteur }}
							</h6>

							<!-- Date -->
							<p class="h6 text-uppercase text-muted mb-0 ms-auto">
								<time datetime="2019-05-31">{{ r.dateCreation|date('d/m/Y') }}</p>
							</p>
						</a>

					</div>

				</div>
				<!-- / .row -->
			{% endfor %}
		</div>


	</div>
</div>


<div
	class="container pb-8 pt-7 pb-md-11 pt-md-10">
	<!-- Heading -->
	<h2 class="mb-0">
